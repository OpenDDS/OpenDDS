#include "orbsvcs/TimeBase.idl"

module StockQuoter {

  @topic
  struct Quote {
    @key string ticker;
    string exchange;
    string full_name;
    double value;
    TimeBase::TimeT timestamp;
  };

  enum ExchangeEventType { TRADING_OPENED,
                           TRADING_CLOSED,
                           TRADING_SUSPENDED,
                           TRADING_RESUMED };
  @topic
  struct ExchangeEvent {
    @key string exchange;
    ExchangeEventType event;
    TimeBase::TimeT timestamp;
  };
};
