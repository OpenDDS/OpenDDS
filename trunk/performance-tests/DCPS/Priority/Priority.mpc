project(perf*idl): dcps {
  // This project ensures the common components get built first.

  TypeSupport_Files {
    Test.idl
  }

  custom_only = 1
}


project(perf*Publisher) : dcpsexe_with_unreliable_dgram, dcps_multicast, dcps_tcp {
  exename = publisher
  after  += perf*idl

  TypeSupport_Files {
    Test.idl
  }

  Source_Files {
    Writer.cpp
    Publisher.cpp
    Options.cpp
    PublicationProfile.cpp
    publisher_main.cpp
  }
}

project(perf*Subscriber) : dcpsexe_with_unreliable_dgram, dcps_multicast, dcps_tcp {
  exename = subscriber
  after  += perf*idl

  TypeSupport_Files {
    Test.idl
  }

  Source_Files {
    Subscriber.cpp
    Options.cpp
    DataReaderListener.cpp
    PublicationProfile.cpp
    Commas.cpp
    subscriber_main.cpp
  }
}
