project(DDS*idl): dcps_test_lib {
  idlflags      += -Wb,stub_export_include=SecurityAttributes_export.h \
                   -Wb,stub_export_macro=SecurityAttributes_Export -SS
  dcps_ts_flags += -Wb,export_macro=SecurityAttributes_Export
  dynamicflags  += SECURITYATTRIBUTES_BUILD_DLL

  TypeSupport_Files {
    SecurityAttributesMessage.idl
  }
}

project(DDS*Publisher): dcpsexe, dcps_rtps_udp {

  exename   = publisher
  after    += DDS*idl
  libs     += DDS*idl

  Idl_Files {
  }

  Source_Files {
    publisher.cpp
    Args.cpp
    Writer.cpp
  }
}

project(DDS*Subscriber): dcpsexe, dcps_rtps_udp {

  exename   = subscriber
  after    += DDS*idl
  libs     += DDS*idl

  Idl_Files {
  }

  Source_Files {
    subscriber.cpp
    Args.cpp
    DataReaderListener.cpp
  }
}
