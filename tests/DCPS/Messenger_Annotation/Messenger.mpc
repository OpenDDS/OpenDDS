
project(DDS*Annotated_idl): dcps_test_lib {
  idlflags      += -Wb,stub_export_include=Messenger_export.h \
                   -Wb,stub_export_macro=Messenger_Export -SS
  dcps_ts_flags += -Wb,export_macro=Messenger_Export
  dynamicflags  += MESSENGER_BUILD_DLL

  TypeSupport_Files {
    Messenger.idl
  }
}

project(DDS*Annotated_Publisher): dcpsexe, dcps_transports_for_test, optional_security {

  exename   = publisher
  after    += DDS*idl
  libs     += DDS*Annotated_idl

  Idl_Files {
  }

  Source_Files {
    publisher.cpp
    Writer.cpp
  }
}

