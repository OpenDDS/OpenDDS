project(DDS*idl): dcps_test_idl_only_lib {
  idlflags      += -Wb,export_macro=InstancesLib_Export -Wb,export_include=instanceslib_export.h -SS
  dcps_ts_flags += -Wb,export_macro=InstancesLib_Export
  dynamicflags  += INSTANCESLIB_BUILD_DLL

  TypeSupport_Files {
    KeyedData.idl
    NoKeyData.idl
  }
}

project(*Publisher): dcpsexe, dcps_test, dcps_transports_for_test {
  exename = publisher
  exeout = .

  after    += DDS*idl
  libs     += DDS*idl

  after    += TestUtils
  libs     += TestUtils
  libpaths += ../../Utils

  Idl_Files {
  }

  Source_Files {
    Publisher.cpp
  }
}

project(*Subscriber): dcpsexe, dcps_test, dcps_transports_for_test {
  exename = subscriber
  exeout = .

  after    += DDS*idl
  libs     += DDS*idl

  after    += TestUtils
  libs     += TestUtils
  libpaths += ../../Utils

  Idl_Files {
  }

  Source_Files {
    Subscriber.cpp
  }
}
