
project(DDS*idl): dcps_test_idl_only_lib {
  idlflags      += -Wb,stub_export_include=Ownership_export.h \
                   -Wb,stub_export_macro=Ownership_Export
  dcps_ts_flags += -Wb,export_macro=Ownership_Export
  dynamicflags  += OWNERSHIP_BUILD_DLL
  requires      += ownership_kind_exclusive
  requires      += ownership_profile
  requires      += built_in_topics

  TypeSupport_Files {
    Messenger.idl
  }
}

project(DDS*Publisher) : dcpsexe, dcps_test, dcps_tcp, dcps_rtps_udp {
  exename   = publisher
  after    += DDS*idl
  libs     += DDS*idl
  requires += ownership_kind_exclusive
  requires += ownership_profile
  requires += built_in_topics

  Idl_Files {
  }

  Source_Files {
    publisher.cpp
  }
}

project(DDS*Subscriber) : dcpsexe, dcps_test, dcps_tcp, dcps_rtps_udp {
  exename   = subscriber
  after    += DDS*idl
  libs     += DDS*idl
  requires += ownership_kind_exclusive
  requires += ownership_profile
  requires += built_in_topics

  Idl_Files {
  }

  Source_Files {
    subscriber.cpp
    DataReaderListener.cpp
  }
}
