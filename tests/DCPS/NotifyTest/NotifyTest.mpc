                   -Wb,stub_export_macro=NotifyTest_Export
  dcps_ts_flags += -Wb,export_macro=NotifyTest_Export
  dynamicflags  += NOTIFYTEST_BUILD_DLL

  Source_Files {
  }

  TypeSupport_Files {
    Messenger.idl
  }
}

