  exename = publisher
  after  += DDS*idl
  libs   += DDS*idl

  Idl_Files {
  }

  Source_Files {
    publisher.cpp
    Writer.cpp
  }
}

project(DDS*Subscriber): dcpsexe_with_tcp {
