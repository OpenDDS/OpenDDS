  idlflags      += -Wb,stub_export_include=LargeSample_export.h \
                   -Wb,stub_export_macro=LargeSample_Export -SS
  dcps_ts_flags += -Wb,export_macro=LargeSample_Export
  dynamicflags  += LARGESAMPLE_BUILD_DLL

  TypeSupport_Files {
    Messenger.idl
  }
}


