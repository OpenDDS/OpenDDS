project(DDS*idl): dcps_test_lib {
  idlflags      += -Wb,stub_export_include=Deadline_export.h \
                   -Wb,stub_export_macro=Deadline_Export -SS
  dcps_ts_flags += -Wb,export_macro=Deadline_Export
  dynamicflags  += DEADLINE_BUILD_DLL

  TypeSupport_Files {
    Messenger.idl
  }
}

project(DDS*Publisher) : dcpsexe, dcps_transports_for_test {
  exename = publisher
  after  += DDS*idl
  libs   += DDS*idl

  Idl_Files {
  }

  Source_Files {
    publisher.cpp
    Writer.cpp
    DataWriterListenerImpl.cpp
  }
}

project(DDS*Subscriber) : dcpsexe, dcps_transports_for_test {
  exename = subscriber
  after  += DDS*idl
  libs   += DDS*idl

  Idl_Files {
  }

  Source_Files {
    subscriber.cpp
    DataReaderListenerImpl.cpp
  }
}
