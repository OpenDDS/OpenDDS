project(*idl): dcps_test_lib {
  idlflags      += -Wb,stub_export_include=WaitForAck_export.h \
                   -Wb,stub_export_macro=WaitForAck_Export -SS
  dcps_ts_flags += -Wb,export_macro=WaitForAck_Export
  dynamicflags  += WAITFORACK_BUILD_DLL

  TypeSupport_Files {
    Test.idl
  }
}


project(*Publisher) : dcpsexe, dcps_transports_for_test {
  exename = publisher
  after  += *idl
  libs   += *idl

  Idl_Files {
  }

  Source_Files {
    Writer.cpp
    Publisher.cpp
    Options.cpp
    publisher_main.cpp
  }
}

project(*Subscriber) : dcpsexe, dcps_transports_for_test {
  exename = subscriber
  after  += *idl
  libs   += *idl

  Idl_Files {
  }

  Source_Files {
    Subscriber.cpp
    Options.cpp
    subscriber_main.cpp
  }
}
