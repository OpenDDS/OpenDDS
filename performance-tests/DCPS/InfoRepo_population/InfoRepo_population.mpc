project(*idl) : dcps_test {
  requires += no_opendds_safety_profile
  TypeSupport_Files {
    Messenger.idl
  }

  custom_only = 1
}

project(*Publisher) : dcpsexe, dcps_test, dcps_rtps_udp {
  requires += no_opendds_safety_profile
  exename   = publisher
  after    += *idl

  TypeSupport_Files {
    Messenger.idl
  }

  Source_Files {
    publisher.cpp
    Writer.cpp
  }
}

project(*Subscriber) : dcpsexe, dcps_test, dcps_rtps_udp {
  requires += no_opendds_safety_profile
  exename   = subscriber
  after    += *Publisher

  TypeSupport_Files {
    Messenger.idl
  }

  Source_Files {
    subscriber.cpp
    DataReaderListener.cpp
  }
}
